{{!-- Life Skills Tab --}}
<h2 class="section-header" style="border-bottom: 0px;"><span class="header-decoration left"></span><img src="systems/stryder/assets/life-skills.svg" width="25px" height="25px" style="border:0px; position: relative; top: 0px; left: -10px;"><strong>{{localize "Life Skills"}}</strong><span class="header-decoration right"></span></h2>
<div class="tab life" data-group="primary" data-tab="life">
  <div class="life-tab">
    
    <div class="life-skills-container" style="margin-top: -2px;">
      {{!-- Cooking --}}
      <div class="life-skill">
        <div class="life-skill-header" data-skill="cooking">
          <img class="life-skill-icon" src="systems/stryder/assets/life-cooking.svg">
          <span class="life-skill-name">Cooking</span>
          <div class="life-skill-controls">
            <button class="life-skill-btn minus" data-skill="cooking">-</button>
            <input class="life-skill-value" type="number" name="system.life.cooking.value" value="{{system.life.cooking.value}}" placeholder="0" min="0" max="5" readonly>
            <button class="life-skill-btn plus" data-skill="cooking">+</button>
          </div>
        </div>
        <div class="life-skill-description">
          The art of preparing and cooking meals to nourish and restore.
        </div>
      </div>
      
      {{!-- Elixir Brewing --}}
      <div class="life-skill">
        <div class="life-skill-header" data-skill="elixirbrewing">
          <img class="life-skill-icon" src="systems/stryder/assets/life-elixir.svg">
          <span class="life-skill-name">Elixir Brewing</span>
          <div class="life-skill-controls">
            <button class="life-skill-btn minus" data-skill="elixirbrewing">-</button>
            <input class="life-skill-value" type="number" name="system.life.elixirbrewing.value" value="{{system.life.elixirbrewing.value}}" placeholder="0" min="0" max="5" readonly>
            <button class="life-skill-btn plus" data-skill="elixirbrewing">+</button>
          </div>
        </div>
        <div class="life-skill-description">
          Crafting magical potions and elixirs with various effects.
        </div>
      </div>
      
      {{!-- Fishing --}}
      <div class="life-skill">
        <div class="life-skill-header" data-skill="fishing">
          <img class="life-skill-icon" src="systems/stryder/assets/life-fishing.svg">
          <span class="life-skill-name">Fishing</span>
          <div class="life-skill-controls">
            <button class="life-skill-btn minus" data-skill="fishing">-</button>
            <input class="life-skill-value" type="number" name="system.life.fishing.value" value="{{system.life.fishing.value}}" placeholder="0" min="0" max="5" readonly>
            <button class="life-skill-btn plus" data-skill="fishing">+</button>
          </div>
        </div>
        <div class="life-skill-description">
          The skill of catching fish and other aquatic creatures.
        </div>
      </div>
      
      {{!-- Hunting --}}
      <div class="life-skill">
        <div class="life-skill-header" data-skill="hunting">
          <img class="life-skill-icon" src="systems/stryder/assets/life-hunting.svg">
          <span class="life-skill-name">Hunting</span>
          <div class="life-skill-controls">
            <button class="life-skill-btn minus" data-skill="hunting">-</button>
            <input class="life-skill-value" type="number" name="system.life.hunting.value" value="{{system.life.hunting.value}}" placeholder="0" min="0" max="5" readonly>
            <button class="life-skill-btn plus" data-skill="hunting">+</button>
          </div>
        </div>
        <div class="life-skill-description">
          Tracking and hunting wild game for food and resources.
        </div>
      </div>
      
      {{!-- Performing --}}
      <div class="life-skill">
        <div class="life-skill-header" data-skill="performing">
          <img class="life-skill-icon" src="systems/stryder/assets/life-performing.svg">
          <span class="life-skill-name">Performing</span>
          <div class="life-skill-controls">
            <button class="life-skill-btn minus" data-skill="performing">-</button>
            <input class="life-skill-value" type="number" name="system.life.performing.value" value="{{system.life.performing.value}}" placeholder="0" min="0" max="5" readonly>
            <button class="life-skill-btn plus" data-skill="performing">+</button>
          </div>
        </div>
        <div class="life-skill-description">
          Entertaining through music, dance, storytelling, or other arts.
        </div>
      </div>
      
      {{!-- Scavenging --}}
      <div class="life-skill">
        <div class="life-skill-header" data-skill="scavenging">
          <img class="life-skill-icon" src="systems/stryder/assets/life-scavenging.svg">
          <span class="life-skill-name">Scavenging</span>
          <div class="life-skill-controls">
            <button class="life-skill-btn minus" data-skill="scavenging">-</button>
            <input class="life-skill-value" type="number" name="system.life.scavenging.value" value="{{system.life.scavenging.value}}" placeholder="0" min="0" max="5" readonly>
            <button class="life-skill-btn plus" data-skill="scavenging">+</button>
          </div>
        </div>
        <div class="life-skill-description">
          Finding and repurposing discarded or hidden materials.
        </div>
      </div>
      
      {{!-- Trading --}}
      <div class="life-skill">
        <div class="life-skill-header" data-skill="trading">
          <img class="life-skill-icon" src="systems/stryder/assets/life-trading.svg">
          <span class="life-skill-name">Trading</span>
          <div class="life-skill-controls">
            <button class="life-skill-btn minus" data-skill="trading">-</button>
            <input class="life-skill-value" type="number" name="system.life.trading.value" value="{{system.life.trading.value}}" placeholder="0" min="0" max="5" readonly>
            <button class="life-skill-btn plus" data-skill="trading">+</button>
          </div>
        </div>
        <div class="life-skill-description">
          The art of negotiation and fair exchange of goods and services.
        </div>
      </div>
    </div>
  </div>
<br />
<div class="bonds-container">
<h2 class="section-header" style="border-bottom: 0px;"><span class="header-decoration left"></span><img src="systems/stryder/assets/professions.svg" width="25px" height="25px" style="border:0px; position: relative; top: 0px; left: -10px;"><strong>{{localize "Professions"}}</strong><span class="header-decoration right"></span></h2>
<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Professions'}}&nbsp<i class='toggle-icon fas fa-chevron-down'></i></div>
    <div class='item-armament-form'>{{localize 'Level'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create item'
        data-type='profession'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=''}}
      </a>
    </div>
  </li>
  {{#each professions as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-armament-levels item-prop'>{{system.profession_level}}</div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Edit" type='profession'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='profession'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol><br />
</div>
<div class="bonds-container">
<h2 class="section-header" style="border-bottom: 0px;"><span class="header-decoration left"></span><img src="systems/stryder/assets/bonds.svg" width="25px" height="25px" style="border:0px; position: relative; top: 0px; left: -10px;"><strong>{{localize "Bonds"}}</strong><span class="header-decoration right"></span></h2>
<ol class='items-list parchment-background'>
  <li class='item flexrow items-header'>
	<div class='item-name bonds-header'>{{localize 'Bonds'}}&nbsp<i class='toggle-icon fas fa-chevron-down'></i></div>
	<div class='item-armament-form bonds-header'>{{localize 'Level'}}</div>
	<div class='item-controls'>
	  <a class='item-control item-create' title='Create item' data-type='bonds'>
		<i class='fas fa-plus magical-icon'></i>
		{{localize 'DOCUMENT.New' type=''}}
	  </a>
	</div>
  </li>
  {{#each bonds as |item id|}}
	<li class='item flexrow bond-item' data-item-id='{{item._id}}'>
	  <div class='item-name bond-name'>
		<div class='item-image'>
		  <a class='rollable magical-icon' data-roll-type='item'>
			<img src='{{item.img}}' title='{{item.name}}' width='24' height='24'/>
		  </a>
		</div>
		<h4>{{item.name}}</h4>
	  </div>
	  <div class='item-bond-levels item-prop bond-level'>{{system.bond.level}}</div>
	  <div class='item-controls'>
		<a class='item-control item-edit magical-icon' title='{{localize "DOCUMENT.Edit" type='bonds'}}'>
		  <i class='fas fa-edit'></i>
		</a>
		<a class='item-control item-delete magical-icon' title='{{localize "DOCUMENT.Delete" type='bonds'}}'>
		  <i class='fas fa-trash'></i>
		</a>
	  </div>
	</li>
  {{/each}}
</ol>
</div>
</div>