<!-- Attribute Modification Section -->
<div class="attribute-modification-section">
  <div class="section-header items-header">
    <div class="item-name">
      <i class="fas fa-cogs"></i>
      {{localize 'Attribute Modifications'}}
      <i class="toggle-icon fas fa-chevron-down"></i>
    </div>
  </div>
  
  <div class="attribute-inputs-container">
    <div class="attribute-inputs-grid">
    <!-- Physical Potency -->
    <div class="attribute-input-group">
      <label class="attribute-label" for="physical-potency-value">
        <img src="systems/stryder/assets/physical_potency.svg" width="20" height="20" style="border:0px;" class="attribute-icon"/>
        {{localize 'Physical Potency'}}
      </label>
      <div class="input-container">
        <input 
          type="number" 
          id="physical-potency-value"
          name="system.attributes.potency_potency.value"
          value="{{system.attributes.physical_potency.value}}"
          class="attribute-input"
          data-dtype="Number"
